#!/bin/bash
root=`pwd`
echo "ctoaster_root: ${root}" > ~/.ctoasterrc
echo "ctoaster_data: ${root/ctoaster.carrotcake/ctoaster-data}" >> ~/.ctoasterrc
echo "ctoaster_test: ${root/ctoaster.carrotcake/ctoaster-test}" >> ~/.ctoasterrc
echo "ctoaster_jobs: ${root/ctoaster.carrotcake/ctoaster-jobs}" >> ~/.ctoasterrc
echo "ctoaster_version: DEVELOPMENT" >> ~/.ctoasterrc
